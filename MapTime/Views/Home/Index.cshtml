@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <script src="https://maps.googleapis.com/maps/api/js?"></script>
</head>
<body>
    <input type="button" value="Click to Display Map" onclick="DisplayGoogleMap()" />
    <div id="myDiv" style="width:100%;height:400px;"></div>

    <script type="text/javascript">

        function DisplayGoogleMap() {

            var rockyMtnNatlPark = new google.maps.LatLng(40.353178, -105.653127);

            var mapOptions = {
                center: rockyMtnNatlPark,
                zoom: 10,
                minZoom: 10,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);

            var marker = new google.maps.Marker({
                position: rockyMtnNatlPark,
                animation: google.maps.Animation.BOUNCE,
            });

            marker.setMap(map);
           }
    </script>
</body>
</html>
